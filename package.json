{
  "name": "iam-kit",
  "version": "0.0.9",
  "description": "A compilation of personal utility tools.",
  "type": "module",
  "keywords": [
    "iam-kit"
  ],
  "license": "MIT",
  "homepage": "https://github.com/alwynou/iam-kit#readme",
  "bugs": "https://github.com/alwynou/iam-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/alwynou/iam-kit"
  },
  "author": {
    "name": "alwynou",
    "email": "alwynou@gmail.com",
    "url": "https://github.com/alwynou"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./*": "./lib/*"
  },
  "scripts": {
    "update:expose": "node ./script/update-expose.js",
    "build": "npm run update:expose && unbuild",
    "release": "npm run test && bumpp",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .js,.ts,.md,.json --max-warnings 0 --cache",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "publish:npm": "pnpm publish --access public --no-git-checks",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@alwynou/eslint-config": "^3.2.3",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "bumpp": "^9.1.1",
    "eslint": "^8.44.0",
    "eslint-define-config": "^1.21.0",
    "fast-glob": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "vitest": "^0.32.4"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": "eslint . --fix"
  }
}
