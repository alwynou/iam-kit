{
  "name": "iam-kit",
  "version": "0.0.3",
  "description": "A compilation of personal utility tools.",
  "type": "module",
  "keywords": [
    "iam-kit"
  ],
  "license": "MIT",
  "homepage": "https://github.com/alwynou/iam-kit#readme",
  "bugs": "https://github.com/alwynou/iam-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/alwynou/iam-kit"
  },
  "author": {
    "name": "alwynou",
    "email": "alwynou@gmail.com",
    "url": "https://github.com/alwynou"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "update:expose": "node ./script/update-expose.js",
    "build": "npm run update:expose && unbuild",
    "release": "npm run update:expose && bumpp",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "publish:npm": "pnpm publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@alwynou/eslint-config": "^3.2.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.43.0",
    "eslint-define-config": "^1.21.0",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vitest": "^0.32.2"
  }
}
